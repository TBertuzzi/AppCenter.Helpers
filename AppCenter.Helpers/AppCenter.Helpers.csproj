<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.1.0</Version>
    <Authors>bertuzzi</Authors>
    <Company>KBits</Company>
    <Description>Helpers  to use app center APIs</Description>
    <Copyright>Copyright 2019</Copyright>
    <PackageLicenseUrl>http://opensource.org/licenses/MS-PL</PackageLicenseUrl>
    <PackageTags>xamarin xamarin.forms mobile ios android appcenter app center helpers</PackageTags>
    <PackageReleaseNotes>Initial Version</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/TBertuzzi/AppCenter.Helpers</PackageProjectUrl>
    <RepositoryUrl>https://github.com/TBertuzzi/AppCenter.Helpers</RepositoryUrl>
    <PackageIconUrl>https://github.com/TBertuzzi/AppCenter.Helpers/blob/master/Resources/icon.png?raw=true</PackageIconUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HttpExtension" Version="1.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Extension\" />
    <Folder Include="Helpers\" />
  </ItemGroup>

</Project>
